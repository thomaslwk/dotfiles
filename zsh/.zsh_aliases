#---------------------------------------------------
# Alias
#---------------------------------------------------
# nvim 
alias vim='nvim'
alias cat='batcat'

# system
alias shutdown='sudo shutdown now'
alias restart='sudo reboot'
alias fonts='fc-cache -f -v'

# main
alias l='ls --color=auto'
alias ls='ls --color=auto'
alias ll='ls -lahF --color=auto'
alias la='ls -A --color=auto'

# cp
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'

# Git
alias git='git'
alias gs='git status'
alias gd='git diff'
alias ga='git add'
alias gpo='git push origin'
alias gt='gitui'

#----------#
# Personal #
#----------#
# script
alias fixhis='source $HOME/personal/custom_scripts/fix_zsh_hist.bash'

# directories
alias person='cd $HOME/personal'
alias workspace='cd $HOME/workspace'
alias talia='cd $HOME/workspace/talia'
alias dot="cd $HOME/personal/dotfiles"
alias tut='cd $HOME/workspace/tutorial'
alias nd='cd $HOME/personal/notes'

# configs
alias conf='cd $HOME/.config'
alias zconf='cd $HOME/.config/zsh'
alias srzsh='source $HOME/.config/zsh/.zshrc'

# dev
alias bsl='brew services list'
alias bsu='brew update'
alias bsuu='brew upgrade'

## apt 
alias aptu='sudo apt update'
alias aptuu='sudo apt upgrade'
alias aptl='apt list --upgradable'

