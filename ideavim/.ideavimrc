sethandler a:ide

" NERDTree
set NERDTree
nnoremap <C-e> :NERDTreeToggle<CR>

" Quickscope
set quickscope
let g:qs_highlight_on_keys = ['f', 'F', 't', 'T']
let g:qs_primary_color = '#ff0000'

" Sneak 
set sneak

" Easymotion
let mapleader="\<Space>"
set easymotion
map <Leader> <Plug>(easymotion-prefix)

" Keymapping
inoremap jk <Esc>

" Highlightyank
set highlightedyank
let g:highlightedyank_highlight_duration = "400"
